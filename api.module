/**
 * Menu callback; displays documentation for a function.
 */
function api_page_function($function) {
  drupal_set_title($function->title);

  $signatures = array();
  $branch_length = 0;
  $result = db_query("SELECT d.branch_name, f.signature FROM {api_documentation} d INNER JOIN {api_function} f ON f.did = d.did WHERE d.object_type = 'function' AND d.title = '%s'", $function->title);
  while ($signature = db_fetch_object($result)) {
    $tokens = token_get_all('<?php '. $signature->signature);
    $name = $tokens[1][1];
    $arguments[$signature->branch_name] = array();
    $other[$signature->branch_name] = array();
    $start = TRUE;
    $d = 0;
    foreach ($tokens as $token) {
      $d += in_array($token, array('(', '{', '[')) - in_array($token, array(')', '}', ']'));
      if ($d == 1 && $start && is_array($token) && $token[0] == T_VARIABLE) {
        $arguments[$signature->branch_name][] = $token[1];
        $other[$signature->branch_name][] = '';
        $start = FALSE;
      }
      elseif ($d == 1 && $token == ',') {
        $start = TRUE;
        $other[$signature->branch_name][count($other[$signature->branch_name]) - 1] .= ',';
      }
      elseif ($d >= 1 && is_array($token)) {
        $other[$signature->branch_name][count($other[$signature->branch_name]) - 1] .= $token[1];
      }
      elseif ($d >= 1 && !$start) {
        $other[$signature->branch_name][count($other[$signature->branch_name]) - 1] .= $token;
      }
    }
    $branch_length = max($branch_length, strlen($signature->branch_name));
  }
  $branches = array_keys($arguments);
  usort($branches, 'version_compare');
  foreach ($branches as $n => $branch_name) {
    $new = array();
    if (isset($branches[$n - 1])) {
      $new = array_diff($arguments[$branch_name], $arguments[$branches[$n - 1]]);
    }
    $old = array();
    if (isset($branches[$n + 1])) {
      $old = array_diff($arguments[$branch_name], $arguments[$branches[$n + 1]]);
    }
    $signatures[$branch_name] = $name .'(';
    foreach ($arguments[$branch_name] as $key => $argument) {
      if (in_array($argument, $old)) {
        $signatures[$branch_name] .= '<del>'. $argument .'</del>';
      }
      elseif (in_array($argument, $new)) {
        $signatures[$branch_name] .= '<ins>'. $argument .'</ins>';
      }
      else {
        $signatures[$branch_name] .= $argument;
      }
      $signatures[$branch_name] .= $other[$branch_name][$key];
    }
    $signatures[$branch_name] .= ')';
  }

  $documentation = api_link_documentation($function->documentation, $function->branch_name);
  $parameters = api_link_documentation($function->parameters, $function->branch_name);
  $return = api_link_documentation($function->return_value, $function->branch_name);
  $code = api_link_code($function->code, $function->branch_name);
  $related_topics = api_related_topics($function->did, $function->branch_name);

  return theme('api_function_page', $function, $signatures, $branch_length, $documentation, $parameters, $return, $related_topics, $code);
}

